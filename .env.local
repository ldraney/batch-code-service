# Application Configuration
NODE_ENV=development
PORT=3000

# Security
WEBHOOK_SECRET=your-secure-webhook-secret-change-me

# Monitoring & Error Tracking
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
SENTRY_ENVIRONMENT=development

# Prometheus (optional - for custom configuration)
PROMETHEUS_PORT=9090
GRAFANA_PORT=3001

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Health Check Configuration
HEALTH_MAX_RESPONSE_TIME=5000
HEALTH_CRITICAL_DISK_USAGE=0.9
HEALTH_CRITICAL_MEMORY_USAGE=0.95

# Generation Configuration
BATCH_CODE_LENGTH=6
MAX_GENERATION_RETRIES=10
CACHE_MAX_SIZE=1000

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Development Settings (local only)
ENABLE_DEBUG_ROUTES=false
MOCK_BASH_SCRIPT=false
